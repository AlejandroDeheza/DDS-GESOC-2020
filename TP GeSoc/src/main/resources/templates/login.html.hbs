{{# partial "titulo" }}
    <title>GeSoc - Login</title>
{{/partial}}

{{# partial "contenido" }}
    <section class="fondo-gris">
        <h2>Inicio de sesión</h2>

        <form action="/login" method="POST">
            <div class="campo">
                <span class="nombre-campo">Nombre de usuario:</span><br>
                <input type="text" name="username" placeholder="Ingrese nombre de usuario">
            </div>
            <div class="campo">
                <span class="nombre-campo">Contraseña:</span><br>
                <input type="password" name="password" placeholder="Ingrese contraseña">
            </div><br>
            <input type="submit" value="Iniciar sesión" class="redStyle">
        </form>

        {{#if loginFailed}}
            <div>
                <p style="color:#b74848"> Usuario o contraseña incorrecta  </p>
            </div>
        {{/if}}

    </section>

{{/partial}}

{{> layout.html.hbs }}