<head>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>

{{# partial "titulo" }}
    <title>GESOC - Entidades</title>
{{/partial}}

{{# partial "nav"}}
    <a class="links_navegacion" href="/organizaciones"><i class="fas fa-sitemap"></i> Organizaciones</a>
    {{#organizacion}}
    <a class="links_navegacion" href="/organizaciones/{{id}}"><i class="fas fa-sitemap"></i> {{nombre}}</a>
    {{/organizacion}}
{{/partial}}

{{# partial "contenido" }}
    <section class="fondo-gris">
        <h2>Entidades</h2>
        {{#organizacion}}
        <form action="/organizaciones/{{id}}/entidades" method="GET">
        {{/organizacion}}
           Filtrar por categoria:
            <select name="categoria">
                <option value = "Cualquiera" selected>Cualquier categoria</option>
                {{#categoriasDisponibles}}
                    <option value={{id}}>{{descripcion}}</option>
                {{/categoriasDisponibles}}
            </select>
            <input type="submit" value="Filtrar">
        </form>

        <ul class="listas">
            {{#entidades}}
                <li>
                    <i class="fas fa-hand-point-right"></i>
                    <a class="link_blanco" href="entidades/{{id}}">{{nombreFicticio}}</a>
                </li>
            {{/entidades}}
        </ul>

    </section>
{{/partial}}

{{> layout.html.hbs }}